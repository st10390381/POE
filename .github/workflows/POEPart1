name: POEPart1

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest
    
    steps:
      # Checkout the code
      - uses: actions/checkout@v2
      
      # Set up the environment (install dependencies, etc.)
      - name: Set up environment
        run: |
          sudo apt-get update
          sudo apt-get install -y openjdk-8-jdk
          
      # Compile the code and tests
      - name: Compile classes and tests
        working-directory: ./src/POEPart1
        run: |
          javac -cp "../testresources/junit-platform-console-standalone-1.6.0.jar" \
          POEPart1.java UserLogin.java "../test/POEPart1/UserLoginTest.java"
      
      # Copy compiled classes and tests to the test directory
      - name: Copy classes and tests to test directory
        working-directory: ./src/POEPart1
        run: |
          cp -t "../../test/POEPart1" POEPart1.class UserLogin.class
        working-directory: ./test/POEPart1
        run: |
          cp -t "../../testresources/" POEPart1.class UserLogin.class 
          
      # Run the tests and output a report
      - name: Run tests and create report
        working-directory: ./test
        run: |
          java -jar "../testresources/junit-platform-console-standalone-1.6.0.jar" \
          -cp "." --select-class POEPart1.UserLoginTest
          
      # Clean up the workspace
      - name: Clean up workspace
        run: |
          rm -rf ./src/POEPart1/*.class
          rm -rf ./test/POEPart1/*.class
